---
import data from "../assets/json/data.json";
import ArrowRight from "./../assets/svg/arrow-right.astro";
import HeaderSection from "@components/ui/HeaderSection.astro";

const infoData = data.benefits;
---

<section class="py-20 lg:py-32 bg-gradient-to-br from-background via-white to-secondary/5 relative overflow-hidden">
  <!-- Elementos decorativos de fondo -->
  <div class="absolute top-16 right-20 w-56 h-56 bg-primary/8 rounded-full blur-3xl animate-pulse"></div>
  <div class="absolute bottom-20 left-16 w-40 h-40 bg-accentcolor/10 rounded-full blur-2xl animate-bounce"></div>
  <div class="absolute top-1/3 left-1/3 w-24 h-24 bg-secondary/8 rounded-full blur-xl animate-pulse delay-300"></div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">

    <!-- Header de la sección -->
    <HeaderSection
        text="Beneficios Exclusivos"
        titleprimary="Los"
        titleColor="Beneficios"
        titleSecondary="que Ofrecemos"
        description="Experimenta una transformación completa con nuestros tratamientos especializados y descubre por qué somos la elección preferida de cientos de clientas satisfechas."
        >
        <svg slot="icon" class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
    </HeaderSection>
    
    <!-- Grid principal -->
    <div class="grid grid-cols-1 xl:grid-cols-2 gap-16 lg:gap-20 items-center">
      
      <!-- Sección de imagen -->
      <div class="relative group order-2 xl:order-1">
        <!-- Marco decorativo principal -->
        <div class="absolute -inset-8 bg-gradient-to-r from-primary/15 via-secondary/15 to-accentcolor/15 rounded-3xl blur-2xl group-hover:blur-3xl transition-all duration-700"></div>
        
        <!-- Container de imagen con efectos -->
        <div class="relative">
          <!-- Imagen principal -->
          <div class="relative overflow-hidden rounded-3xl shadow-2xl">
            <img
              src="https://i.pinimg.com/736x/f7/48/ec/f748eceb567cf3650ed5b485ac3f72cc.jpg"
              alt="Beneficios del salón de belleza - Tratamientos profesionales"
              class="w-full h-[550px] lg:h-[650px] object-cover transform group-hover:scale-110 transition-transform duration-700"
              loading="lazy"
            />
            
            <!-- Overlay con gradiente -->
            <div class="absolute inset-0 bg-gradient-to-t from-primary/20 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            
            <!-- Badge flotante superior -->
            <div class="absolute top-6 left-6 bg-white/95 backdrop-blur-sm px-4 py-3 rounded-2xl shadow-lg">
              <div class="flex items-center gap-2">
                <div class="w-3 h-3 bg-accentcolor rounded-full animate-pulse"></div>
                <span class="text-texto font-semibold text-sm">Certificado Premium</span>
              </div>
            </div>
            
            <!-- Badge flotante inferior -->
            <div class="absolute bottom-6 right-6 bg-white/95 backdrop-blur-sm px-4 py-3 rounded-2xl shadow-lg transform translate-y-4 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-500 delay-200">
              <div class="text-center">
                <div class="text-lg font-bold text-primary">100%</div>
                <div class="text-xs text-texto/70 font-medium">Satisfacción</div>
              </div>
            </div>
          </div>
          
          <!-- Elementos decorativos flotantes -->
          <div class="absolute -top-6 -right-6 w-20 h-20 bg-accentcolor/30 rounded-full blur-lg animate-bounce delay-500"></div>
          <div class="absolute -bottom-8 -left-8 w-32 h-32 bg-secondary/20 rounded-full blur-xl animate-pulse delay-700"></div>
          
          <!-- Pattern decorativo -->
          <div class="absolute top-4 right-4 w-16 h-16 opacity-20">
            <div class="grid grid-cols-4 gap-1 h-full">
              {Array.from({length: 16}).map((_, i) => (
                <div class="bg-white rounded-full animate-pulse" style={`animation-delay: ${i * 0.1}s`}></div>
              ))}
            </div>
          </div>
        </div>
      </div>

      <!-- Sección de contenido -->
      <div class="space-y-8 order-1 xl:order-2">

        <!-- Lista de beneficios -->
        <div class="space-y-4">
          {
            infoData.map((item, index) => (
              <div 
                class="group bg-white/60 backdrop-blur-sm border border-secondary/30 rounded-2xl p-4 shadow-md hover:shadow-xl hover:bg-white/80 transform hover:-translate-y-1 transition-all duration-300 relative overflow-hidden"
                style={`animation-delay: ${index * 0.1}s`}
              >
                <!-- Icono del beneficio -->
                <div class="flex items-start gap-4">
                  <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-primary/10 to-secondary/10 rounded-xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                    <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
                    </svg>
                  </div>
                  
                  <!-- Contenido del beneficio -->
                  <div class="flex-1">
                    <p class="text-texto text-lg font-medium leading-relaxed group-hover:text-primary transition-colors duration-300">
                      {item}
                    </p>
                  </div>
                  
                  <!-- Indicador de check -->
                  <div class="flex-shrink-0 w-6 h-6 bg-accentcolor rounded-full flex items-center justify-center opacity-0 group-hover:opacity-100 transition-all duration-300 transform scale-0 group-hover:scale-100">
                    <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
                    </svg>
                  </div>
                </div>
                
                <!-- Efecto de brillo en hover -->
                <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/10 to-transparent -skew-x-12 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-700 origin-left"></div>
              </div>
            ))
          }
        </div>
      </div>
    </div>
    
        <!-- Botón CTA -->
        <div class="mt-20 text-center">
          <a
            href="#contacto"
            class="inline-flex items-center gap-3 bg-gradient-to-r from-primary to-secondary text-white px-8 py-4 rounded-full font-bold text-lg hover:from-primary/90 hover:to-secondary/90 hover:shadow-lg transform hover:-translate-y-1 transition-all duration-300 group"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            Experimenta los Beneficios
            <ArrowRight size={20} color="white"/>
          </a>
        </div>
  </div>
</section>