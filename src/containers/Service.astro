---
import SectionCtaService from "@components/SectionCtaService.astro";
import data from "../assets/json/data.json";
import HeaderSection from "@components/ui/HeaderSection.astro";
import { iconDict } from "./../assets/svg/IconDict";
import CardService from "@components/ui/CardService.astro";

const infoData = data.services;
---

<section
  id="servicios"
  class="py-20 lg:py-32 bg-gradient-to-b from-white to-[#FFF8F9] relative overflow-hidden"
>
  <!-- Elementos decorativos de fondo -->
  <div
    class="absolute top-20 left-10 w-64 h-64 bg-primary/5 rounded-full blur-3xl"
  >
  </div>
  <div
    class="absolute bottom-20 right-10 w-48 h-48 bg-secondary/10 rounded-full blur-2xl"
  >
  </div>
  <div
    class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-32 h-32 bg-accentcolor/5 rounded-full blur-xl"
  >
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <!-- Header de la sección -->
    <HeaderSection
      text="Nuestros Servicios"
      titleprimary="Servicios de"
      titleColor="Belleza Premium"
      description="Descubre nuestra amplia gama de tratamientos diseñados para realzar tu belleza natural con las técnicas más avanzadas y productos de la más alta calidad"
    >
      <svg
        slot="icon"
        class="w-5 h-5 text-primary"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"
        ></path>
      </svg>
    </HeaderSection>
    <!-- Grid de servicios -->
    <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-8 lg:gap-10">
      {
        infoData &&
          infoData.map((item) => {
            const IconComponent = iconDict[item.icono];
            return (
              <CardService service={item}>
                {IconComponent && <IconComponent slot="icon" size={44}/>}
              </CardService>
            );
          })
      }
    </div>

    <!-- Sección de llamada a la acción -->
    <SectionCtaService />
  </div>
</section>
