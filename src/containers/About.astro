---
import HeaderSection from "@components/ui/HeaderSection.astro";
import ArrowRight from "./../assets/svg/arrow-right.astro";
import InfoBlock from "@components/ui/InfoBlock.astro";
import Image from "astro/components/Image.astro";
import data from "../assets/json/data.json";
import ImgUrl from "../assets/images/about.jpg";
import CtaButton from "@components/ui/CtaButton.astro";

const infoData = data.about;
---

<section
  id="about"
  class="py-20 lg:py-32 bg-gradient-to-br from-background to-white relative overflow-hidden"
>
  <!-- Elementos decorativos de fondo -->
  <div
    class="absolute top-10 right-10 w-40 h-40 bg-secondary/10 rounded-full blur-2xl"
  >
  </div>
  <div
    class="absolute bottom-20 left-10 w-32 h-32 bg-accentcolor/10 rounded-full blur-xl"
  >
  </div>
  <div
    class="absolute top-1/2 right-1/4 w-20 h-20 bg-primary/5 rounded-full blur-lg"
  >
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <!-- Header de la sección -->
    <HeaderSection
      text="Sobre Nosotros"
      titleprimary="Nuestra Historia de"
      titleColor="Belleza"
      description="Descubre la pasión y experiencia que nos convierte en tu mejor opción"
    >
      <div slot="icon" class="w-2 h-2 bg-primary rounded-full animate-pulse">
      </div>
    </HeaderSection>

    <!-- Contenido principal -->
    <div class="grid grid-cols-1 xl:grid-cols-2 gap-12 lg:gap-16 items-center">
      <!-- Imagen con efectos -->
      <div class="relative group order-2 xl:order-1">
        <!-- Marco decorativo principal -->
        <div
          class="absolute -inset-6 bg-gradient-to-r from-primary/20 via-secondary/20 to-accentcolor/20 rounded-3xl blur-xl group-hover:blur-2xl transition-all duration-700"
        >
        </div>

        <!-- Container de imagen -->
        <div class="relative">
          <!-- Imagen principal -->
          <div class="relative overflow-hidden rounded-3xl shadow-2xl">
            <Image
              src={ImgUrl}
              alt={`${infoData.titulo} - Salón de belleza profesional`}
              class="w-full h-[500px] lg:h-[600px] object-cover transform group-hover:scale-110 transition-transform duration-700"
              loading="lazy"
            />

            <!-- Overlay con gradiente -->
            <div
              class="absolute inset-0 bg-gradient-to-t from-primary/30 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"
            >
            </div>

            <!-- Badge de experiencia -->
            <div
              class="absolute top-6 left-6 bg-white/95 backdrop-blur-sm px-4 py-3 rounded-2xl shadow-lg"
            >
              <div class="text-center">
                <div class="text-2xl font-bold text-primary">10+</div>
                <div class="text-xs text-texto/70 font-medium">Años</div>
              </div>
            </div>

            <!-- Badge de clientes satisfechas -->
            <div
              class="absolute bottom-6 right-6 bg-white/95 backdrop-blur-sm px-4 py-3 rounded-2xl shadow-lg transform translate-y-4 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-500 delay-200"
            >
              <div class="flex items-center gap-2">
                <div class="flex">
                  {
                    Array.from({ length: 5 }).map((_, i) => (
                      <svg
                        class="w-3 h-3 text-accentcolor fill-current"
                        viewBox="0 0 20 20"
                      >
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                      </svg>
                    ))
                  }
                </div>
                <span class="text-xs font-semibold text-texto"
                  >500+ Clientes</span
                >
              </div>
            </div>
          </div>

          <!-- Elementos decorativos flotantes -->
          <div
            class="absolute -top-4 -right-4 w-24 h-24 bg-accentcolor/30 rounded-full blur-lg animate-pulse delay-300"
          >
          </div>
          <div
            class="absolute -bottom-6 -left-6 w-32 h-32 bg-secondary/20 rounded-full blur-xl animate-bounce"
          >
          </div>
        </div>
      </div>

      <!-- Contenido de texto -->
      <div class="text-left space-y-8 order-1 xl:order-2">
        <!-- Título principal -->
        <div>
          <h3 class="text-3xl lg:text-4xl font-bold text-texto leading-tight mb-6">
            {infoData.titulo}
          </h3>

          <!-- Descripción principal -->
          <div class="text-lg text-texto/80 leading-relaxed space-y-4">
            <p>{infoData.descripcion}</p>
          </div>
        </div>

        <!-- Características destacadas -->
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
          <InfoBlock
            title="Profesionales Certificadas"
            description="Equipo especializado con formación continua"
            colorClass="primary"
          >
            <svg
              slot="icon"
              class="w-6 h-6 text-primary"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </InfoBlock>
          <InfoBlock
            title="Productos Premium"
            description="Solo utilizamos las mejores marcas del mercado"
            colorClass="secondary"
          >
            <svg
              slot="icon"
              class="w-6 h-6 text-secondary"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
              ></path>
            </svg>
          </InfoBlock>
          <InfoBlock
            title="Horarios Flexibles"
            description="Adaptamos nuestros horarios a tu agenda"
            colorClass="accentcolor"
          >
            <svg
              slot="icon"
              class="w-6 h-6 text-accentcolor"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </InfoBlock>
          <InfoBlock
            title="Ambiente Relajante"
            description="Espacio diseñado para tu comodidad y bienestar"
            colorClass="primary"
          >
            <svg
              slot="icon"
              class="w-6 h-6 text-primary"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"
              ></path>
            </svg>
          </InfoBlock>
        </div>

        <!-- Estadísticas -->
        <div class="flex flex-wrap gap-8 pt-6 border-t border-secondary/20">
          <div class="text-center">
            <div class="text-3xl font-bold text-primary">500+</div>
            <div class="text-sm text-texto/70 font-medium">
              Clientes Felices
            </div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-secondary">10+</div>
            <div class="text-sm text-texto/70 font-medium">
              Años de Experiencia
            </div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-accentcolor">15+</div>
            <div class="text-sm text-texto/70 font-medium">
              Servicios Especializados
            </div>
          </div>
        </div>

        <!-- Botón CTA -->
        <div class="pt-4">
          <CtaButton href="#servicios" text="Conoce Nuestros Servicios">
            <ArrowRight slot="iconEnd" color="white" size={20} />
          </CtaButton>
        </div>
      </div>
    </div>
  </div>
</section>
