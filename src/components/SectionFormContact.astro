<div
  class="bg-white rounded-3xl shadow-xl p-8 sm:p-10 border border-secondary/20 relative overflow-hidden"
>
  <!-- Form decorative background -->
  <div
    class="absolute -top-6 -right-6 w-24 h-24 bg-gradient-to-r from-secondary to-accentcolor rounded-full opacity-10"
  >
  </div>
  <div
    class="absolute -bottom-4 -left-4 w-16 h-16 bg-primary rounded-full opacity-10"
  >
  </div>

  <div class="relative">
    <h3 class="text-2xl sm:text-3xl font-bold text-primary mb-2">
      ¡Agenda tu cita!
    </h3>
    <p class="text-texto/70 mb-8">
      Completa el formulario y nos pondremos en contacto contigo muy pronto.
    </p>

    <form id="contact-form" class="space-y-6">
      <!-- Name Input -->
      <div class="group">
        <label
          for="nombre"
          class="block text-sm font-medium text-texto mb-2 transition-colors group-focus-within:text-primary"
        >
          Nombre completo *
        </label>
        <div class="relative">
          <input
            type="text"
            id="nombre"
            name="nombre"
            required
            class="w-full px-4 py-4 bg-background border-2 border-secondary/30 rounded-xl focus:outline-none focus:border-primary focus:bg-white transition-all duration-300 placeholder:text-texto/40"
            placeholder="Ej: María González"
          />
          <div
            class="absolute inset-y-0 right-0 flex items-center pr-4 opacity-0 group-focus-within:opacity-100 transition-opacity duration-300"
          >
            <svg
              class="w-5 h-5 text-primary"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
              ></path>
            </svg>
          </div>
        </div>
      </div>

      <!-- Email Input -->
      <div class="group">
        <label
          for="email"
          class="block text-sm font-medium text-texto mb-2 transition-colors group-focus-within:text-primary"
        >
          Email *
        </label>
        <div class="relative">
          <input
            type="email"
            id="email"
            name="email"
            required
            class="w-full px-4 py-4 bg-background border-2 border-secondary/30 rounded-xl focus:outline-none focus:border-primary focus:bg-white transition-all duration-300 placeholder:text-texto/40"
            placeholder="tu@email.com"
          />
          <div
            class="absolute inset-y-0 right-0 flex items-center pr-4 opacity-0 group-focus-within:opacity-100 transition-opacity duration-300"
          >
            <svg
              class="w-5 h-5 text-primary"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path>
            </svg>
          </div>
        </div>
      </div>

      <!-- Phone Input -->
      <div class="group">
        <label
          for="telefono"
          class="block text-sm font-medium text-texto mb-2 transition-colors group-focus-within:text-primary"
        >
          Teléfono
        </label>
        <div class="relative">
          <input
            type="tel"
            id="telefono"
            name="telefono"
            class="w-full px-4 py-4 bg-background border-2 border-secondary/30 rounded-xl focus:outline-none focus:border-primary focus:bg-white transition-all duration-300 placeholder:text-texto/40"
            placeholder="+1 (234) 567-8900"
          />
          <div
            class="absolute inset-y-0 right-0 flex items-center pr-4 opacity-0 group-focus-within:opacity-100 transition-opacity duration-300"
          >
            <svg
              class="w-5 h-5 text-primary"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
              ></path>
            </svg>
          </div>
        </div>
      </div>

      <!-- Service Selection -->
      <div class="group">
        <label
          for="servicio"
          class="block text-sm font-medium text-texto mb-2 transition-colors group-focus-within:text-primary"
        >
          Servicio de interés
        </label>
        <div class="relative w-full">
          <select
            id="servicio"
            name="servicio"
            class="w-full appearance-none bg-background border-2 border-secondary/30 rounded-xl px-4 py-4 pr-10 text-texto focus:outline-none focus:border-primary focus:bg-white transition duration-300"
          >
            <option value="">Selecciona un servicio</option>
            <option value="corte">Corte de cabello</option>
            <option value="color">Coloración</option>
            <option value="peinado">Peinados</option>
            <option value="tratamiento">Tratamientos capilares</option>
            <option value="maquillaje">Maquillaje</option>
            <option value="manicure">Manicure/Pedicure</option>
            <option value="otro">Otro</option>
          </select>
          <div
            class="pointer-events-none absolute inset-y-0 right-3 flex items-center text-texto"
          >
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M19 9l-7 7-7-7"></path>
            </svg>
          </div>
        </div>
      </div>

      <!-- Message Input -->
      <div class="group">
        <label
          for="mensaje"
          class="block text-sm font-medium text-texto mb-2 transition-colors group-focus-within:text-primary"
        >
          Mensaje adicional
        </label>
        <textarea
          id="mensaje"
          name="mensaje"
          rows="4"
          class="w-full px-4 py-4 bg-[#FFF8F9] border-2 border-secondary/30 rounded-xl focus:outline-none focus:border-primary focus:bg-white transition-all duration-300 placeholder:text-texto/40 resize-none"
          placeholder="Cuéntanos sobre tu cita ideal, horarios preferidos o cualquier consulta específica..."
        ></textarea>
      </div>

      <!-- Submit Button -->
      <button
        type="submit"
        class="w-full bg-gradient-to-r from-primary to-secondary hover:from-secondary hover:to-primary text-white font-bold py-4 px-8 rounded-xl shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all duration-300 flex items-center justify-center gap-3 group"
      >
        <span>Enviar mensaje</span>
        <svg
          class="w-5 h-5 group-hover:translate-x-1 transition-transform duration-300"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
        </svg>
      </button>

      <!-- Success Message -->
      <div
        id="success-message"
        class="hidden bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-xl"
      >
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path
              fill-rule="evenodd"
              d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
              clip-rule="evenodd"></path>
          </svg>
          <span>¡Mensaje enviado! Nos contactaremos contigo pronto.</span>
        </div>
      </div>
    </form>
  </div>
</div>
