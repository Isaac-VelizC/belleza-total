---
// InfoBlock.astro
export interface Props {
  title: string;
  description: string;
  colorClass: string; // ej. "primary", "secondary", "accentcolor"
}

const { title, description, colorClass } = Astro.props;
---

<div class={`flex items-start gap-4 group`}>
  <div class={`flex-shrink-0 w-12 h-12 rounded-full flex items-center justify-center transition-colors duration-300 group-hover:bg-${colorClass}/20 bg-${colorClass}/10`}>
    {/* Aquí ponemos el ícono pasado */}
    <slot name="icon" />
  </div>
  <div>
    <h4 class="font-semibold text-texto mb-1">{title}</h4>
    <p class="text-sm text-texto/70">{description}</p>
  </div>
</div>
