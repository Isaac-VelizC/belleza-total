---
// CardContact.astro
export interface CardProps {
  title: string;
}
const { title } = Astro.props;
---
<div class="group bg-white rounded-2xl p-6 shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1 border border-secondary/20">
  <div class="w-12 h-12 bg-gradient-to-r from-primary to-accentcolor rounded-xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-300">
    <slot name="icon" />
  </div>
  <h3 class="text-primary font-bold text-lg mb-2">{title}</h3>
  <div>
    <slot name="info" />
  </div>
</div>
