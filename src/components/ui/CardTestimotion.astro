---
import type { TestimotionInterface } from "@interface/testimotions";
import Image from "astro/components/Image.astro";

export type CardProps = {
    item: TestimotionInterface
}

const { item } = Astro.props;
---

<div class="w-full flex-shrink-0 px-4">
  <div class="max-w-4xl mx-auto">
    <div
      class="bg-white rounded-3xl shadow-xl p-8 sm:p-12 relative transform hover:scale-105 transition-all duration-300 hover:shadow-2xl"
    >
      <!-- Quote Icon -->
      <div class="absolute -top-6 left-8">
        <div
          class="w-12 h-12 bg-gradient-to-r from-primary to-secondary rounded-full flex items-center justify-center shadow-lg"
        >
          <svg
            class="w-6 h-6 text-white"
            fill="currentColor"
            viewBox="0 0 24 24"
          >
            <path d="M14,17H17L19,13V7H13V13H16M6,17H9L11,13V7H5V13H8L6,17Z"
            ></path>
          </svg>
        </div>
      </div>

      <!-- Content -->
      <div class="text-center pt-6">
        <!-- Stars -->
        <div class="flex justify-center mb-6">
          {
            [...Array(5)].map((_, i) => (
              <svg
                class="w-6 h-6 text-accentcolor animate-bounce"
                style={`animation-delay: ${i * 0.1}s`}
                fill="currentColor"
                viewBox="0 0 24 24"
              >
                <path d="M12,17.27L18.18,21L16.54,13.97L22,9.24L14.81,8.62L12,2L9.19,8.62L2,9.24L7.46,13.97L5.82,21L12,17.27Z" />
              </svg>
            ))
          }
        </div>

        <!-- Testimonial Text -->
        <blockquote
          class="text-texto text-lg sm:text-xl leading-relaxed mb-8 italic font-light"
        >
          "{item.comentario}"
        </blockquote>

        <!-- Customer Info -->
        <div
          class="flex flex-col sm:flex-row items-center justify-center gap-4"
        >
          <div class="relative">
            <Image
              src={item.foto}
              alt={`Foto de ${item.nombre}`}
              width={64}
              height={64}
              class="w-16 h-16 rounded-full object-cover border-4 border-secondary shadow-lg"
              loading={"lazy"}
            />
            <div
              class="absolute -bottom-1 -right-1 w-6 h-6 bg-accentcolor rounded-full flex items-center justify-center"
            >
              <svg
                class="w-4 h-4 text-white"
                fill="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  d="M9,20.42L2.79,14.21L5.62,11.38L9,14.77L18.88,4.88L21.71,7.71L9,20.42Z"
                ></path>
              </svg>
            </div>
          </div>
          <div class="text-center sm:text-left">
            <h3 class="text-primary font-bold text-xl">{item.nombre}</h3>
            <p class="text-texto/60 text-sm">Cliente verificada</p>
          </div>
        </div>
      </div>

      <!-- Decorative Elements -->
      <div class="absolute top-4 right-4 opacity-10">
        <div
          class="w-20 h-20 bg-gradient-to-r from-primary to-secondary rounded-full"
        >
        </div>
      </div>
      <div class="absolute bottom-4 left-4 opacity-10">
        <div class="w-12 h-12 bg-accentcolor rounded-full"></div>
      </div>
    </div>
  </div>
</div>
